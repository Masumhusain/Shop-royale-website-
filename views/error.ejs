
        <main class="fixed-navbar-adjust">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 text-center">
                        <div class="error-icon mb-4">
                            <i class="fas fa-exclamation-triangle fa-4x text-warning"></i>
                        </div>
                        <h1 class="display-4 text-gold mb-3">Oops! Something Went Wrong</h1>
                        <p class="lead text-muted mb-4">
                            We apologize for the inconvenience. Our technical team has been notified.
                        </p>
                        
                        <hr class="my-4">
                        
                        <div class="my-5">
                            <h2 class="h4 text-gold mb-3">Royal Footwear</h2>
                            <p class="text-white-50">
                                Premium quality shoes crafted for royalty. Experience comfort and style like never before.
                            </p>
                        </div>

                        <!-- Optional: Show error details if in development -->
                        <% if (process.env.NODE_ENV !== 'production' && typeof error !== 'undefined') { %>
                            <div class="mt-4 p-3 bg-dark text-white rounded">
                                <pre class="mb-0"><code><%= JSON.stringify(error, null, 2) %></code></pre>
                            </div>
                        <% } %>

                        <div class="mt-5">
                            <a href="/" class="btn btn-gold btn-lg me-3">
                                <i class="fas fa-home me-2"></i> Go Home
                            </a>
                            <a href="/products" class="btn btn-outline-gold btn-lg">
                                <i class="fas fa-shopping-bag me-2"></i> Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
