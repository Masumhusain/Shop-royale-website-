<!-- Featured Products -->
<section id="featured" class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h2 class="section-title animate-slide-up">Featured Products</h2>
                <p class="text-muted animate-slide-up delay-1">Handpicked selections for the discerning customer</p>
            </div>
            <a href="/products" class="btn btn-outline-dark animate-slide-up">
                View All <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
        
        <div class="row g-4">
            <% if (featuredProducts && featuredProducts.length > 0) { %>
                <% featuredProducts.forEach((product, index) => { 
                    // Safely get product details
                    const productName = product.name || 'Product';
                    const productBrand = product.brand || 'Brand';
                    const productPrice = parseFloat(product.price) || 0;
                    const productDiscountPrice = parseFloat(product.discountPrice) || 0;
                    const productRating = product.rating || 0;
                    const productReviews = product.reviewsCount || 0;
                    
                    // Safely get first image
                    let productImage = '/images/default-shoe.jpg';
                    if (product.colors && 
                        product.colors.length > 0 && 
                        product.colors[0].images && 
                        product.colors[0].images.length > 0 &&
                        product.colors[0].images[0].url) {
                        productImage = product.colors[0].images[0].url;
                    }
                    
                    // Calculate discount percentage
                    const discountPercent = productDiscountPrice > 0 && productDiscountPrice < productPrice 
                        ? Math.round(((productPrice - productDiscountPrice) / productPrice) * 100) 
                        : 0;
                %>
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="product-card luxury-card h-100 animate-fade-in" style="animation-delay: <%= index * 0.1 %>s">
                            <div class="product-image position-relative">
                                <a href="/products/<%= product._id %>" class="product-image-link">
                                    <img src="<%= productImage %>" 
                                         alt="<%= productName %>" 
                                         class="img-fluid product-main-image"
                                         onerror="this.src='/images/default-shoe.jpg'">
                                </a>
                                
                                <!-- Badges -->
                                <div class="product-badges">
                                    <% if (discountPercent > 0) { %>
                                        <span class="badge discount-badge">-<%= discountPercent %>%</span>
                                    <% } %>
                                    <% if (product.featured) { %>
                                        <span class="badge featured-badge">
                                            <i class="fas fa-crown me-1"></i> Featured
                                        </span>
                                    <% } %>
                                    <% 
                                        // Check stock
                                        let totalStock = 0;
                                        if (product.sizes && Array.isArray(product.sizes)) {
                                            totalStock = product.sizes.reduce((sum, size) => sum + (parseInt(size.quantity) || 0), 0);
                                        }
                                        if (totalStock === 0) { 
                                    %>
                                        <span class="badge stock-badge">Out of Stock</span>
                                    <% } %>
                                </div>
                                
                                <!-- Quick Actions -->
                                <div class="quick-actions">
                                    <button class="quick-action-btn wishlist-btn" title="Add to Wishlist">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    <button class="quick-action-btn view-btn" title="Quick View" onclick="window.location.href='/products/<%= product._id %>'">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="product-content p-4">
                                <!-- Brand -->
                                <div class="product-brand mb-2">
                                    <span class="badge bg-light text-dark"><%= productBrand %></span>
                                </div>
                                
                                <!-- Title -->
                                <h6 class="product-title mb-2">
                                    <a href="/products/<%= product._id %>" class="text-decoration-none text-dark">
                                        <%= productName.length > 50 ? productName.substring(0, 50) + '...' : productName %>
                                    </a>
                                </h6>
                                
                                <!-- Rating -->
                                <div class="product-rating mb-3">
                                    <div class="d-flex align-items-center">
                                        <div class="stars">
                                            <% for(let i = 1; i <= 5; i++) { %>
                                                <% if (i <= Math.floor(productRating)) { %>
                                                    <i class="fas fa-star text-warning"></i>
                                                <% } else if (i === Math.ceil(productRating) && productRating % 1 !== 0) { %>
                                                    <i class="fas fa-star-half-alt text-warning"></i>
                                                <% } else { %>
                                                    <i class="far fa-star text-warning"></i>
                                                <% } %>
                                            <% } %>
                                        </div>
                                        <span class="ms-2 text-muted small">(<%= productReviews %>)</span>
                                    </div>
                                </div>
                                
                                <!-- Price -->
                                <div class="product-price mb-4">
                                    <% if (productDiscountPrice > 0 && productDiscountPrice < productPrice) { %>
                                        <div class="d-flex align-items-center">
                                            <h5 class="text-danger fw-bold mb-0">₹<%= productDiscountPrice.toFixed(2) %></h5>
                                            <h6 class="text-muted text-decoration-line-through ms-3 mb-0">₹<%= productPrice.toFixed(2) %></h6>
                                        </div>
                                        <div class="save-amount text-success small">
                                            Save ₹<%= (productPrice - productDiscountPrice).toFixed(2) %>
                                        </div>
                                    <% } else { %>
                                        <h5 class="fw-bold mb-0">₹<%= productPrice.toFixed(2) %></h5>
                                    <% } %>
                                </div>
                                
                                <!-- Action Button -->
                                <div class="product-action">
                                    <a href="/products/<%= product._id %>" class="btn btn-outline-dark w-100">
                                        <i class="fas fa-shopping-cart me-2"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <div class="empty-state">
                        <i class="fas fa-shoe-prints fa-3x text-muted mb-4"></i>
                        <h4 class="mb-3">No Featured Products</h4>
                        <p class="text-muted">Check back soon for our latest collections</p>
                        <a href="/products" class="btn btn-gold mt-3">
                            <i class="fas fa-store me-2"></i>Browse All Products
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

