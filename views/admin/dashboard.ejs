    <script>
        // Initialize timestamp
        document.addEventListener('DOMContentLoaded', function() {
            updateTimestamp();
            
            // Add refresh button event listener
            const refreshBtn = document.getElementById('refreshStatsBtn');
            if (refreshBtn) {
                refreshBtn.addEventListener('click', refreshStats);
            }
            
            // Confirm logout
            const logoutLink = document.querySelector('a[href="/logout"]');
            if (logoutLink) {
                logoutLink.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to logout from admin panel?')) {
                        e.preventDefault();
                    }
                });
            }
        });
        
        // Update timestamp
        function updateTimestamp() {
            const now = new Date();
            const timeString = now.toLocaleTimeString([], { 
                hour: '2-digit', 
                minute: '2-digit',
                second: '2-digit'
            });
            document.getElementById('lastUpdated').textContent = timeString;
        }
        
        // Refresh stats via AJAX
       
        
        // Update stats on page
        function updateStats(stats) {
            // Update main stats
            document.getElementById('totalProducts').textContent = stats.totalProducts;
            document.getElementById('totalOrders').textContent = stats.totalOrders;
            document.getElementById('totalUsers').textContent = stats.totalUsers;
            document.getElementById('totalRevenue').textContent = '₹' + stats.totalRevenue.toLocaleString('en-IN');
            
            // Update recent activities
            const activitiesContainer = document.getElementById('recentActivities');
            if (activitiesContainer && stats.recentActivities) {
                activitiesContainer.innerHTML = '';
                stats.recentActivities.forEach(activity => {
                    const activityDiv = document.createElement('div');
                    activityDiv.className = 'activity-item';
                    activityDiv.innerHTML = `
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <strong class="text-primary">${activity.title}</strong>
                            <small class="text-muted">${activity.time}</small>
                        </div>
                        <p class="mb-0 text-muted">${activity.description}</p>
                    `;
                    activitiesContainer.appendChild(activityDiv);
                });
            }
        }
        
        // Show alert message
        function showAlert(message, type) {
            // Remove existing alerts
            const existingAlerts = document.querySelectorAll('.alert-dismissible');
            existingAlerts.forEach(alert => alert.remove());
            
            // Create new alert
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show mb-4`;
            alertDiv.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            // Insert at the top of container
            const container = document.querySelector('.admin-container');
            container.insertBefore(alertDiv, container.firstChild);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }
        
        // Auto-refresh every 2 minutes
        setInterval(() => {
            console.log('Auto-refreshing dashboard stats...');
            refreshStats();
        }, 120000);
        
        // Update time every second
        setInterval(updateTimestamp, 1000);
