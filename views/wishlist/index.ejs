<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishlist | Royal Footwear</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-dark: #1a1a2e;
            --secondary-dark: #16213e;
            --accent-color: #ffd700;
            --light-bg: #f5f7fb;
            --border-radius: 10px;
        }
        
        body { background: var(--light-bg); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        
        .wishlist-item-image {
            width: 120px;
            height: 120px;
            object-fit: contain;
            border-radius: 8px;
            padding: 5px;
            background: white;
            border: 1px solid #eee;
        }
        
        .btn-gold {
            background: linear-gradient(135deg, var(--accent-color) 0%, #ffed4e 100%);
            color: var(--primary-dark);
            border: none;
            font-weight: 700;
            padding: 10px 20px;
            border-radius: 8px;
        }
        
        .btn-gold:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(255, 215, 0, 0.3); }
        
        .empty-wishlist {
            text-align: center;
            padding: 80px 20px;
        }
        
        .empty-wishlist-icon {
            font-size: 80px;
            color: #ff6b8b;
            margin-bottom: 20px;
        }
        
        .product-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid #eee;
            border-radius: var(--border-radius);
            overflow: hidden;
            background: white;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        
        .badge-discount {
            position: absolute;
            top: 10px;
            left: 10px;
            background: #dc3545;
            color: white;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: bold;
        }
        
        .remove-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background: white;
            color: #dc3545;
            border: 1px solid #eee;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .remove-btn:hover {
            background: #dc3545;
            color: white;
        }
        
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
            max-width: 400px;
        }
        
        @keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
    </style>
   
</head>
<body>
    <div class="container py-5">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/products">Products</a></li>
                <li class="breadcrumb-item active" aria-current="page">My Wishlist</li>
            </ol>
        </nav>
        
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-2">My Wishlist</h1>
                <p class="text-muted mb-0">
                    <% if (wishlist && wishlist.items && wishlist.items.length > 0) { %>
                        <%= wishlist.items.length %> item(s) in your wishlist
                    <% } else { %>
                        Your wishlist is empty
                    <% } %>
                </p>
            </div>
            <div>
                <a href="/products" class="btn btn-outline-dark">
                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                </a>
            </div>
        </div>
        
        <% if (!wishlist || !wishlist.items || wishlist.items.length === 0) { %>
            <!-- Empty Wishlist -->
            <div class="empty-wishlist">
                <div class="empty-wishlist-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <h3 class="mb-3">Your wishlist is empty</h3>
                <p class="text-muted mb-4">Save items you love to your wishlist. Review them anytime and easily move them to the bag.</p>
                <a href="/products" class="btn btn-gold">
                    <i class="fas fa-shopping-bag me-2"></i>Start Shopping
                </a>
            </div>
        <% } else { %>
            <!-- Wishlist Items -->
            <div class="row g-4">
                <% wishlist.items.forEach((item, index) => { %>
                    <div class="col-lg-4 col-md-6" id="wishlist-item-<%= item._id %>">
                        <div class="product-card h-100 position-relative">
                            <!-- Remove Button -->
                            <div class="remove-btn" onclick="removeFromWishlist('<%= item._id %>', '<%= item.product %>')" 
                                 title="Remove from wishlist">
                                <i class="fas fa-times"></i>
                            </div>
                            
                            <!-- Discount Badge -->
                            <% if (item.discountPrice && item.discountPrice < item.price) { %>
                                <div class="badge-discount">
                                    Save <%= (((item.price - item.discountPrice) / item.price) * 100).toFixed(0) %>%
                                </div>
                            <% } %>
                            
                            <!-- Product Image -->
                            <div class="text-center p-3">
                                <img src="<%= item.image?.secure_url || item.image?.url || '/images/default-shoe.jpg' %>" 
                                     alt="<%= item.name %>" 
                                     class="img-fluid wishlist-item-image">
                            </div>
                            
                            <!-- Product Details -->
                            <div class="p-3">
                                <h6 class="product-title mb-2">
                                    <a href="/products/<%= item.product %>" class="text-decoration-none text-dark">
                                        <%= item.name %>
                                    </a>
                                </h6>
                                
                                <p class="text-muted small mb-2">
                                    <i class="fas fa-tag me-1"></i><%= item.brand %>
                                    <span class="ms-2">
                                        <i class="fas fa-layer-group me-1"></i><%= item.category %>
                                    </span>
                                </p>
                                
                                <!-- Price -->
                                <div class="product-price mb-3">
                                    <% if (item.discountPrice && item.discountPrice < item.price) { %>
                                        <div class="d-flex align-items-center">
                                            <span class="text-danger fw-bold fs-5">₹<%= item.discountPrice.toFixed(2) %></span>
                                            <span class="text-muted text-decoration-line-through ms-2">₹<%= item.price.toFixed(2) %></span>
                                        </div>
                                    <% } else { %>
                                        <span class="fw-bold fs-5">₹<%= item.price.toFixed(2) %></span>
                                    <% } %>
                                </div>
                                
                                <!-- Colors Available -->
                                <% if (item.colors && item.colors.length > 0) { %>
                                    <div class="mb-3">
                                        <p class="small text-muted mb-1">Available Colors:</p>
                                        <div class="d-flex flex-wrap gap-1">
                                            <% item.colors.forEach((color, colorIndex) => { %>
                                                <% if (colorIndex < 4) { %>
                                                    <div class="color-dot" 
                                                         style="width: 20px; height: 20px; border-radius: 50%; background-color: <%= color.code || '#000000' %>; border: 1px solid #ddd;"
                                                         title="<%= color.name %>">
                                                    </div>
                                                <% } %>
                                            <% }); %>
                                            <% if (item.colors.length > 4) { %>
                                                <span class="small text-muted">+<%= item.colors.length - 4 %> more</span>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } %>
                                
                                <!-- Sizes Available -->
                                <% if (item.sizes && item.sizes.length > 0) { %>
                                    <div class="mb-3">
                                        <p class="small text-muted mb-1">Available Sizes:</p>
                                        <div class="d-flex flex-wrap gap-1">
                                            <% item.sizes.forEach((sizeObj, sizeIndex) => { %>
                                                <% if (sizeIndex < 6 && sizeObj.quantity > 0) { %>
                                                    <span class="badge bg-light text-dark border">
                                                        US <%= sizeObj.size %>
                                                    </span>
                                                <% } %>
                                            <% }); %>
                                            <% if (item.sizes.filter(s => s.quantity > 0).length > 6) { %>
                                                <span class="small text-muted">+<%= item.sizes.filter(s => s.quantity > 0).length - 6 %> more</span>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } %>
                                
                                <!-- Action Buttons -->
                                <div class="d-grid gap-2">
                                    <a href="/products/<%= item.product %>" class="btn btn-outline-dark">
                                        <i class="fas fa-eye me-2"></i>View Details
                                    </a>
                                    
                                    <button class="btn btn-gold" onclick="moveToCart('<%= item.product %>')">
                                        <i class="fas fa-shopping-cart me-2"></i>Move to Cart
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <!-- Clear Wishlist Button -->
            <div class="text-center mt-5 pt-4 border-top">
                <button class="btn btn-outline-danger" onclick="clearWishlist()">
                    <i class="fas fa-trash me-2"></i>Clear Wishlist
                </button>
            </div>
        <% } %>
    </div>
    
    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <div class="mb-4 mx-auto" style="width: 60px; height: 60px; border-radius: 50%; background: #28a745; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-check fa-2x text-white"></i>
                    </div>
                    <h4 class="mb-3" id="successTitle"></h4>
                    <p class="text-muted mb-4" id="successMessage"></p>
                    <div class="d-grid gap-2">
                        <a href="/cart" class="btn btn-gold" id="viewCartBtn">View Cart</a>
                        <button class="btn btn-outline-dark" data-bs-dismiss="modal">Continue Shopping</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Remove item from wishlist - FIXED
    function removeFromWishlist(itemId, productId) {
        if (confirm('Are you sure you want to remove this item from your wishlist?')) {
            // Show loading state
            const removeBtn = document.querySelector(`[onclick*="${itemId}"]`);
            if (removeBtn) {
                const originalHTML = removeBtn.innerHTML;
                removeBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                removeBtn.style.pointerEvents = 'none';
            }
            
            fetch(`/products/wishlist/remove/${productId}`, {
                method: 'DELETE',
                credentials: 'include'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Remove item from UI
                    const itemElement = document.getElementById(`wishlist-item-${itemId}`);
                    if (itemElement) {
                        itemElement.style.opacity = '0.5';
                        setTimeout(() => {
                            itemElement.remove();
                            
                            // Show notification
                            showNotification('Removed from wishlist', 'success');
                            
                            // Update wishlist count in navbar
                            updateWishlistCount();
                            
                            // Check if wishlist is now empty
                            const itemCount = document.querySelectorAll('.product-card').length;
                            if (itemCount === 0) {
                                setTimeout(() => location.reload(), 1000);
                            }
                        }, 300);
                    }
                } else {
                    showNotification(data.error || 'Failed to remove from wishlist', 'error');
                    // Reset button
                    if (removeBtn) {
                        removeBtn.innerHTML = '<i class="fas fa-times"></i>';
                        removeBtn.style.pointerEvents = 'auto';
                    }
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Network error. Please try again.', 'error');
                // Reset button
                if (removeBtn) {
                    removeBtn.innerHTML = '<i class="fas fa-times"></i>';
                    removeBtn.style.pointerEvents = 'auto';
                }
            });
        }
    }
    
    // Clear entire wishlist - FIXED
    function clearWishlist() {
        if (confirm('Are you sure you want to clear your entire wishlist? This action cannot be undone.')) {
            // Show loading state
            const clearBtn = document.querySelector('[onclick="clearWishlist()"]');
            const originalHTML = clearBtn.innerHTML;
            clearBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Clearing...';
            clearBtn.disabled = true;
            
            fetch('/products/wishlist/clear', {
                method: 'DELETE',
                credentials: 'include'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('Wishlist cleared successfully', 'success');
                    
                    // Fade out all items
                    const items = document.querySelectorAll('.product-card');
                    items.forEach((item, index) => {
                        setTimeout(() => {
                            item.style.opacity = '0.3';
                            item.style.transform = 'scale(0.95)';
                        }, index * 100);
                    });
                    
                    // Reload page after animation
                    setTimeout(() => {
                        location.reload();
                    }, items.length * 100 + 500);
                    
                } else {
                    showNotification(data.error || 'Failed to clear wishlist', 'error');
                    clearBtn.innerHTML = originalHTML;
                    clearBtn.disabled = false;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Network error. Please try again.', 'error');
                clearBtn.innerHTML = originalHTML;
                clearBtn.disabled = false;
            });
        }
    }
    
    // Move item to cart
    function moveToCart(productId) {
        // You can implement this if needed
        showNotification('Move to cart feature coming soon!', 'info');
        // Or redirect to product page
        // window.location.href = `/products/${productId}`;
    }
    
    // Show notification
    function showNotification(message, type = 'info') {
        // Remove existing notifications
        const existingNotifications = document.querySelectorAll('.alert-notification');
        existingNotifications.forEach(notification => notification.remove());
        
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show alert-notification notification`;
        alertDiv.style.cssText = `
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
            max-width: 400px;
            animation: slideIn 0.3s ease-out;
        `;
        
        let icon = 'info-circle';
        if (type === 'success') icon = 'check-circle';
        if (type === 'error' || type === 'danger') icon = 'exclamation-circle';
        if (type === 'warning') icon = 'exclamation-triangle';
        
        alertDiv.innerHTML = `
            <i class="fas fa-${icon} me-2"></i>
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        
        document.body.appendChild(alertDiv);
        
        setTimeout(() => {
            if (alertDiv.parentNode) {
                alertDiv.classList.remove('show');
                setTimeout(() => {
                    if (alertDiv.parentNode) {
                        alertDiv.remove();
                    }
                }, 300);
            }
        }, 5000);
    }
    
    // Update wishlist count in navbar
    function updateWishlistCount() {
        fetch('/products/wishlist/count', {
            credentials: 'include'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const wishlistBadges = document.querySelectorAll('.wishlist-count-badge');
                wishlistBadges.forEach(badge => {
                    if (data.count > 0) {
                        badge.textContent = data.count;
                        badge.style.display = 'flex';
                    } else {
                        badge.style.display = 'none';
                    }
                });
            }
        })
        .catch(error => {
            console.error('Error updating wishlist count:', error);
        });
    }
    
    // Update cart count in navbar
    function updateCartCount() {
        fetch('/products/cart/count', {
            credentials: 'include'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const cartBadges = document.querySelectorAll('.cart-count-badge');
                cartBadges.forEach(badge => {
                    if (data.count > 0) {
                        badge.textContent = data.count;
                        badge.style.display = 'flex';
                    } else {
                        badge.style.display = 'none';
                    }
                });
            }
        })
        .catch(error => {
            console.error('Error updating cart count:', error);
        });
    }
    
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        updateCartCount();
        updateWishlistCount();
    });
    </script>
</body>
</html>